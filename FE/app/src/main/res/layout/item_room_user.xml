<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_backgroud_border_black"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/ivRoomManager"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/room_manager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/userScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/roomUserProfile" />

    <ImageView
        android:id="@+id/roomUserProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userScore" />

    <TextView
        android:id="@+id/gameUserNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/roomUserProfile"
        app:layout_constraintStart_toStartOf="@+id/roomUserProfile"
        app:layout_constraintTop_toBottomOf="@+id/roomUserProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>