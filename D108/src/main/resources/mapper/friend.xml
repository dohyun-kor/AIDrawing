<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.model.dao.FriendDao">

    <select id="searchFriends" parameterType="int" resultType="com.example.model.dto.Friend">
        SELECT *
        FROM Friend
        WHERE #{userId} IN (user_id, friend_id)
    </select>


    <insert id="requestFriends" parameterType="com.example.model.dto.Friend">
        INSERT INTO Friend (user_id, friend_id, status)
        VALUES (#{userId}, #{friendId}, #{status})
    </insert>


</mapper>
