<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.model.dao.GuestBookDao">

    <!-- 방명록 작성(삽입) 쿼리 -->
    <insert id="insertGuestBook" parameterType="com.example.model.dto.GuestBookDto">
        INSERT INTO GuestBook (user_id, writer_id, content, score)
        VALUES (#{userId}, #{writerId}, #{content}, #{score})
    </insert>

    <!-- 방명록 수정(삽입) 쿼리 -->
    <update id="updateGuestBook" parameterType="map">
        UPDATE GuestBook
        SET
        content = #{content},
        score = #{score}
        WHERE user_id = #{userId}
        AND writer_id = #{writerId}
    </update>


    <!-- 방명록 삭제 쿼리 -->
    <delete id="deleteGuestBook" parameterType="int">
        DELETE FROM GuestBook
        WHERE guest_book_id = #{guestBookId}
    </delete>
</mapper>
