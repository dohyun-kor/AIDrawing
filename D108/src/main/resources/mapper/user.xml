<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.model.dao.UserDao">

    <!-- 회원가입 -->
    <insert id="insert" parameterType="com.example.model.dto.User">
    INSERT INTO Users
        (id,
         password,
         nickname,
         email)
        VALUES (#{id},
                #{password},
                #{nickname},
                #{email})
    </insert>

    <!-- 로그인 시 ID로 사용자 조회 -->
    <select id="findById" resultType="com.example.model.dto.User">
        SELECT * FROM Users WHERE id = #{id}
    </select>

    <!-- 닉네임 중복 여부 확인 -->
    <select id="existsByNickname" parameterType="string" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM Users
        WHERE nickname = #{nickname}
    </select>

</mapper>
