<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartstoreUI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryVariant">@color/main_theme</item>

        <!--ratingBar-->
        <item name="colorControlNormal">@color/coffee_light_gray</item>
        <item name="colorControlActivated">@color/sub_theme</item>

    </style>


    <style name="AppTheme" parent="android:Theme.Material">
        <item name="android:colorPrimaryDark">@color/main_theme</item>
    </style>

    <style name="Text.Regular" parent="android:TextAppearance">
