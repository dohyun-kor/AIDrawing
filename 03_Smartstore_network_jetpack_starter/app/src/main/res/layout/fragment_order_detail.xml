<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coinuse"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use 300 coins"
            android:textSize="15sp"
            style="@style/parkinsans"
            android:visibility="gone"
            android:textColor="@color/red"
            android:layout_marginTop="105dp"
            android:layout_marginRight="15dp"
            android:elevation="10dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 배경 이미지를 ImageView로 설정 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/receipt" />

            <!-- Order Summary 텍스트 -->
            <TextView
                android:id="@+id/textView4"
                style="@style/common_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Order Summary"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <!-- 밑줄 이미지 -->

            <!-- Order Date -->
            <TextView
                android:id="@+id/tvOrderDate"
                style="@style/common_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="20dp"
                android:text="2021.05.01"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- Order Status -->
            <TextView
                android:id="@+id/tvOrderStatus"
                style="@style/common_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="16dp"
                android:text="Complete"
                android:textColor="@color/main_theme"
                android:textSize="20dp" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/tvTotalPrice"
                style="@style/common_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="16dp"
                android:text="20,000원"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOrderDetailList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="45dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
