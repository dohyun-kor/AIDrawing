<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/textview_regular"
    android:paddingLeft="0dp"
    android:layout_marginRight="5dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/EdiyaCoffeeBack"
        app:strokeColor="@color/sub_theme">
        <ImageView
            android:id="@+id/menuImage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/coffee1" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textMenuNames"
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="아메리카노 외 3잔"
        android:textSize="10sp"
        android:gravity="center"
        style="@style/parkinsans"/>
    <TextView
        android:id="@+id/textMenuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25,000원"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        style="@style/parkinsans"/>
    <TextView
        android:id="@+id/textMenuDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.05.06"
        android:textSize="15sp"
        android:textColor="@color/lightgray"
        android:layout_marginTop="4dp"
        style="@style/common_cafe"/>
    <TextView
        android:id="@+id/textCompleted"
        android:background="@color/sub_theme"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Complete"
        android:textSize="12sp"
        style="@style/parkinsans"/>
</LinearLayout>