<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="4dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/EdiyaCoffeeBack"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/coffee_brown_light"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/menuImage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/americano1" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textShoppingMenuName"
            style="@style/common_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Americano"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/OrderDetailSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tall"
            style="@style/common_cafe"
            android:textColor="@color/main_theme"
            android:layout_gravity="top"
            />
        <TextView
            android:id="@+id/OrderDetailShot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            style="@style/common_cafe"
            android:textColor="@color/subtext"
            android:layout_gravity="top"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textShoppingMenuCount"
            style="@style/common_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="2 drinks"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textShoppingMenuMoneyAll"
            style="@style/common_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="18,800ì›"
            android:textSize="15sp" />
    </LinearLayout>



</LinearLayout>