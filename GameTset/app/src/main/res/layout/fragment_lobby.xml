<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.LobbyFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_url="https://cdn.lottielab.com/l/5zRQQrp2gNjUri.json?v=117d0101c6ae4623a0487486&amp;w=1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <ImageView
        android:id="@+id/lobbyLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimation"
        app:srcCompat="@drawable/lobby_letters_js" />

    <ImageView
        android:id="@+id/signupBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup_body_js"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lobbyLetters" />

    <ImageButton
        android:id="@+id/quickJoinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/lobby_quick_join_box_js"
        app:layout_constraintStart_toStartOf="@+id/signupBody"
        app:layout_constraintTop_toBottomOf="@+id/signupBody"/>


    <FrameLayout
        android:id="@+id/createButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/signupBody"
        app:layout_constraintTop_toBottomOf="@+id/signupBody">

        <ImageButton
            android:id="@+id/createButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/lobby_create_button_js" />

        <ImageView
            android:id="@+id/createLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/create_logo_js"
          />
    </FrameLayout>
    <TextView
        android:id="@+id/quickJoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빠른입장"
        android:fontFamily="@font/daehan"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/quickJoinButton"
        app:layout_constraintStart_toStartOf="@+id/quickJoinButton"
        app:layout_constraintEnd_toEndOf="@+id/quickJoinButton" />

    <TextView
        android:id="@+id/createRoomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방생성"
        android:fontFamily="@font/daehan"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/createButtonContainer"
        app:layout_constraintStart_toStartOf="@+id/createButtonContainer"
        app:layout_constraintEnd_toEndOf="@+id/createButtonContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>