<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몇 초 남았냐!! 도현아 일해라!!!"
        android:textSize="25sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topic_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="topic1"
        android:textSize="25sp"
        android:background="@drawable/login_loginbtn_sw"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/topic_txt2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remaining_time" />

    <TextView
        android:id="@+id/topic_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="topic2"
        android:textSize="25sp"
        android:background="@drawable/login_loginbtn_sw"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/topic_txt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/topic_txt1"
        app:layout_constraintTop_toTopOf="@+id/topic_txt1" />

</androidx.constraintlayout.widget.ConstraintLayout>