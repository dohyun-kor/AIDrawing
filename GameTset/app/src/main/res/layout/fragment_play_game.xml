<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/remainTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="01:00"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.gametset.room.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/remainTime"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/drawBox"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/wordRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawingView">

        <ImageButton
            android:id="@+id/pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/baseline_border_color_24"
            app:layout_constraintBottom_toTopOf="@+id/eraser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"/>


        <ImageButton
            android:id="@+id/eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            android:src="@drawable/baseline_adb_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pen" />

        <ImageView
            android:id="@+id/penColorRed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/pen"
            app:layout_constraintTop_toTopOf="@+id/pen"/>

        <ImageView
            android:id="@+id/penColorOrange"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorRed"
            app:layout_constraintTop_toTopOf="@+id/pen" />
        <ImageView
            android:id="@+id/penColorYellow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/yellow"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorOrange"
            app:layout_constraintTop_toTopOf="@+id/pen" />
        <ImageView
            android:id="@+id/penColorGreen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorYellow"
            app:layout_constraintTop_toTopOf="@+id/pen" />
        <ImageView
            android:id="@+id/penColorBlue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/blue"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorGreen"
            app:layout_constraintTop_toTopOf="@+id/pen" />
        <ImageView
            android:id="@+id/penColorNavyBlue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/navy_blue"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorBlue"
            app:layout_constraintTop_toTopOf="@+id/pen" />
        <ImageView
            android:id="@+id/penColorPurple"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/purple"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorNavyBlue"
            app:layout_constraintTop_toTopOf="@+id/pen" />
        <ImageView
            android:id="@+id/penColorBlack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_backgroud_border_black"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/pen"
            app:layout_constraintStart_toEndOf="@+id/penColorPurple"
            app:layout_constraintTop_toTopOf="@+id/pen" />

        <SeekBar
            android:id="@+id/verticalSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="50"
            app:layout_constraintStart_toStartOf="@+id/eraser"
            app:layout_constraintTop_toBottomOf="@+id/eraser" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wordRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawBox" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="Clear Canvas"
        app:layout_constraintBottom_toBottomOf="@+id/drawingView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="정답을 입력하세요."
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
